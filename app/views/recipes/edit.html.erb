<h1 class="text-lg text-center xl:text-start xl:text-2xl my-4">Everything changes,
  <span class="underline font-bold">even your Recipe!</span>
</h1>

<div class="flex flex-col xl:grid xl:grid-cols-3 gap-8">
  <%= render 'form', recipe: @recipe %>

  <div class="flex flex-col gap-4">
    <div class="text-center text-xl font-bold text-amber-800">Ingredients</div>
    <div class="flex justify-center">
      <a href="#" class="amber-button">
        Add Ingredient
      </a>
    </div>
  </div>

  <div class="flex flex-col gap-4">
    <div class="text-center text-xl font-bold text-purple-800">Steps</div>
    <div class="flex justify-center">
      <a href="#" class="purple-button">
        Add Step
      </a>
    </div>
  </div>
  <div class="flex justify-center">
    <%= link_to recipe_path(@recipe),
                data: {
                  turbo_method: :delete,
                  turbo_confirm: 'Are you sure you want to delete this recipe?'
                }, :class => "red-button" do %>
      Delete Recipe
    <% end %>
  </div>
</div>
