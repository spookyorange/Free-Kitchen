<h1>Everything changes, even your Recipe!</h1>

<%= render 'form', recipe: @recipe %>

<div class="flex justify-center">
  <a href="#" class="bg-green-200  hover:bg-green-800 button-styling">
    Add Ingredient
  </a>
</div>

<div class="flex justify-center">
  <a href="#" class="bg-purple-200 hover:bg-purple-800 button-styling">
    Add Step
  </a>
</div>

<div class="flex justify-center">
  <%= link_to recipe_path(@recipe),
              data: {
                turbo_method: :delete,
                turbo_confirm: 'Are you sure you want to delete this recipe?'
              }, :class => "flex justify-center bg-red-200 hover:bg-red-800 button-styling" do %>
    Delete Recipe
  <% end %>
</div>
