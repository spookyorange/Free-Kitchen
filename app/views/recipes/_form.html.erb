<%= form_with model: recipe do |f| %>
  <div class="flex flex-col items-center gap-4 mt-6">
    <div class="input-area-container">
      <%= turbo_frame_tag "recipe-title-error" %>
      <%= f.label :title, :class => "flex flex-col items-center gap-2 text-lg" do %>
        <span>Title</span>
        <%= f.text_field :title, :placeholder => "min 4, max 20", :class => "input-area-general" %>
      <% end %>
    </div>
    <div class="input-area-container">
      <%= turbo_frame_tag "recipe-about-error" %>
      <%= f.label :about, :class => "flex flex-col items-center gap-2 text-lg w-full" do %>
        <span>About</span>
        <%= f.text_area :about, :placeholder => "min 15, max 250", :class => "input-area-general w-full h-[6rem] xl:h-[10rem]" %>
      <% end %>
    </div>
    <%= f.submit 'Lead the Others!', :class => "green-button mt-4" %>
  </div>
<% end %>


