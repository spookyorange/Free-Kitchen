<%= form_with model: [recipe, recipe.ingredients.build] do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :quantity, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Quantity</span>
      <%= f.number_field :quantity, :class => "ml-auto input-area-general" %>
    <% end %>
    <%= f.label :name, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Name</span>
      <%= f.text_field :name, :class => "ml-auto input-area-general" %>
    <% end %>
    <div class="flex justify-evenly">
      <%= f.submit "Add Ingredient", :class => "amber-button" %>
    </div>
  </div>
<% end %>