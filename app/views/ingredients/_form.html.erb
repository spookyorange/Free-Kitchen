<%= form_with model: [recipe, recipe.ingredients.build],
              data: { controller: "ing-form",
                      action: "turbo:submit-end->ing-form#resetIngForm" } do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :quantity, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Quantity</span>
      <%= f.number_field :quantity, :class => "ml-auto input-area-general invalid-input",
                         data: {"ing-form-target": "quantity",
                                action: "input->ing-form#checkIngQuantity",
                                valid: "0" },
                         placeholder: "min 1" %>
    <% end %>
    <%= f.label :name, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Name</span>
      <%= f.text_field :name, :class => "ml-auto input-area-general invalid-input",
                       data: {"ing-form-target": "name",
                              action: "input->ing-form#checkIngName",
                              valid: "0" },
                       placeholder: "min 3, max 16 characters"  %>
    <% end %>
    <div class="flex justify-evenly">
      <%= f.submit "Add Ingredient",
                   :class => "amber-button disabled-amber-button",
                   disabled: true,
                   data: { "ing-form-target": "ingSubmit" } %>
    </div>
  </div>
<% end %>