<%= form_with model: [ingredient.recipe, ingredient] do |f| %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
<%= link_to 'delete ingredient', [ingredient.recipe, ingredient], data: { turbo_method: :delete,
                                                                          turbo_confirm: 'Are you sure?' } %>