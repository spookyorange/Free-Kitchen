<% if user_signed_in? && current_user.profile && current_user.profile == @recipe.profile %>
  <%= render 'ingredients/ing_update', ingredient: ingredient %>
  <%= link_to 'delete ingredient', [ingredient.recipe, ingredient], data: { turbo_method: :delete,
                                                                            turbo_confirm: 'Are you sure?' } %>
<% else %>
  <div><%= ingredient.quantity %> <%= ingredient.name %></div>
<% end %>