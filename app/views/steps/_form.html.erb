<%= form_with model: [recipe, recipe.steps.build],
              data: { controller: "recipe-extra-form", action: "turbo:submit-end->recipe-extra-form#reset"} do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :title, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Title</span>
      <%= f.text_field :title, :class => "ml-auto input-area-general" %>
    <% end %>
    <%= f.label :description, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Description</span>
      <%= f.text_area :description, :class => "ml-auto input-area-general" %>
    <% end %>
    <%= f.label :duration, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Duration</span>
      <%= f.number_field :duration, :class => "ml-auto input-area-general" %>
    <% end %>
    <%= f.label :order, :class => "flex items-center gap-2 text-lg w-full" do %>
      <span>Order</span>
      <%= f.number_field :order, :class => "ml-auto input-area-general" %>
    <% end %>
    <div class="flex justify-evenly">
      <%= f.submit :class => "purple-button disabled-purple-button", disabled: true %>
    </div>
  </div>
<% end %>