<%= form_with model: [ recipe, recipe.steps.create ], data: { turbo: false } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :time_consumption %>
  <%= f.number_field :time_consumption %>
  <%= f.label :order %>
  <%= f.number_field :order %>
  <%= f.submit %>
<% end %>