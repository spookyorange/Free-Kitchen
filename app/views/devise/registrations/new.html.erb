<div class="flex flex-col items-center gap-4">
  <h2 class="text-3xl font-bold">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col items-center gap-4">
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :email, :class => "input-area-container" do %>
        <span>E-mail</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-area-general" %>
      <% end %>

      <%= f.label :password, :class => "input-area-container" do %>
        <span>
          Password
          <em>(8 characters minimum)</em>
        </span>
        <%= f.password_field :password, autocomplete: "new-password", :class => "input-area-general" %>
      <% end %>

      <%= f.label :password_confirmation, :class => "input-area-container" do %>
        <span>Confirm Password</span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "input-area-general" %>
      <% end %>

      <%= f.submit "Sign up", data: { turbo: false }, :class => "green-button" %>
    </div>
  <% end %>
</div>

<div class="flex flex-col items-center mt-8 gap-2">
  <%= render "devise/shared/links" %>
</div>