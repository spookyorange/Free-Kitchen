<div class="flex flex-col items-center gap-4">
  <h2 class="text-3xl font-bold">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="flex flex-col items-center gap-4">
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :email, :class => "input-area-container" do %>
        <span>E-mail</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-area-general" %>
      <% end %>

      <%= f.submit "Send me reset password instructions", :class => "red-button" %>
    </div>
  <% end %>
</div>

<div class="flex flex-col items-center mt-8 gap-2">
  <%= render "devise/shared/links" %>
</div>
