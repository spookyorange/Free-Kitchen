<div class="flex flex-col items-center gap-4">
  <h2 class="text-3xl font-bold">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col items-center gap-4">
      <%= f.label :email, :class => "input-area-container" do %>
        <span>E-mail</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-area-general" %>
      <% end %>

      <%= f.label :password, :class => "input-area-container" do %>
        <span>Password</span>
        <%= f.password_field :password, autocomplete: "current-password", :class => "input-area-general" %>
      <% end %>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 text-lg">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", :class => "blue-button", data: { turbo: false } %>
      </div>
    </div>
  <% end %>
</div>

<div class="flex flex-col items-center mt-8 gap-2">
  <%= render "devise/shared/links" %>
</div>